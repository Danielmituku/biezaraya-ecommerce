# Copy this to .env.local and fill in your values

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_BACKEND_URL=http://localhost:5000
REACT_APP_NODE_ENV=development

# Cloudinary Configuration (for image display)
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Chapa Public Key (for frontend payment integration)
REACT_APP_CHAPA_PUBLIC_KEY=your_chapa_public_key

# Google Analytics (optional)
REACT_APP_GA_TRACKING_ID=your_google_analytics_id
# App Configuration
REACT_APP_NAME= Biezaraya
REACT_APP_DESCRIPTION=Your favorite fashion destination
REACT_APP_VERSION=1.0.0

# Image Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Default Language
REACT_APP_DEFAULT_LANGUAGE=en

# Environment
REACT_APP_NODE_ENV=development

# Analytics (if you plan to add Google Analytics later)
REACT_APP_GA_MEASUREMENT_ID=your_ga_measurement_id